{% extends 'admin/base_admin.html.twig' %}

{% block title %}Compte Administrateur
{% endblock %}

{% block body %}
	<div class="row pad-botm">
		<div class="col-md-12">
			<h4 class="header-line">Réclamations de SanarLav</h4>
		</div>
	</div>

	<div class="row">
		<div
			class="col-md-12">
			<!-- Advanced Tables -->
			<div class="panel panel-default">
				<div class="panel-heading">
					Listes des réclammations
				</div>
				<div class="panel-body">
					<div class="table-responsive">
						<table class="table table-striped table-bordered table-hover" id="dataTables-example">
							<thead>
								<tr>
									<th>#</th>
									<th>Sujet</th>
									<th>Message</th>
									<th>Email</th>
									<th>Nom</th>
									<th>Date</th>
									<th>Action</th>
								</tr>
							</thead>
							<tbody>
								{% for contact in contacts %}
									<tr>
										<td>{{ contact.id }}</td>
										<td>{{ contact.sujet }}</td>
										<td>{{ contact.texte}}</td>
										<td>{{ contact.email }}</td>
										<td>{{ contact.nom }}</td>
										<td>{{ contact.date ? contact.date|date('Y-m-d H:i:s') : '' }}</td>
										<td>
											<a href="{{ path('app_contacts_show', {'id': contact.id}) }}">Voir</a>
										</td>
									</tr>
								{% else %}
									<tr>
										<td colspan="12">Pas de réclammations présents deans la base</td>
									</tr>
								{% endfor %}
							</tbody>
						</table>
					</div>

				</div>
			</div>
			<!--End Advanced Tables -->
		</div>
	</div>

{% endblock %}

