<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}SanarLav Administration
			{% endblock %}
		</title>
		<link rel="icon" href="{{ asset('assets/img/icones/ilav_r.ico') }}">
		{% block styles %}
			<!-- Template Stylesheet -->
			<link href="{{ asset('assets/admin/css/bootstrap.css') }}" rel="stylesheet">
			<link href="{{ asset('assets/admin/js/dataTables/dataTables.bootstrap.css') }}" rel="stylesheet">
			<link href="{{ asset('assets/admin/css/font-awesome.css') }}" rel="stylesheet">
			<link href="{{ asset('assets/admin/css/style.css') }}" rel="stylesheet">
			
			<!-- Icon Font Stylesheet -->
			<link href="http://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">
		{% endblock %}

		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>
	{% block nav %}
		<!-- Navbar & Hero Start -->
		<div class="navbar navbar-inverse set-radius-zero">
			<div class="container">
				<div class="navbar-header">
					<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					<a class="navbar-brand" href="/admin">
						<img class="logo" src="{{ asset('assets/img/logo.png') }}" alt="Logo">
					</a>

				</div>

				<div class="right-div">
					<a href="/logout" class="btn btn-danger pull-right">{% trans %}Se deconnecter{% endtrans %}</a>
				</div>
			</div>
		</div>

		<section class="menu-section">
			<div class="container">
				<div class="row ">
					<div class="col-md-12">
						<div class="navbar-collapse collapse ">
							<ul id="menu-top" class="nav navbar-nav navbar-right">
								<li>
									<a href="/admin" class="menu-top-active">{% trans %}DASHBOARD{% endtrans %}</a>
								</li>

								<li>
									<a href="/user">{% trans %}Utilisateurs{% endtrans %}</a>
								</li>
								<li>
									<a href="#" class="dropdown-toggle" id="ddlmenuItem" data-toggle="dropdown">{% trans %}Transactions{% endtrans %}
										<i class="fa fa-angle-down"></i>
									</a>
									<ul class="dropdown-menu" role="menu" aria-labelledby="ddlmenuItem">
										<li role="presentation">
											<a role="menuitem" tabindex="-1" href="/transaction">{% trans %}Paiements{% endtrans %}</a>
										</li>
										<li role="presentation">
											<a role="menuitem" tabindex="-1" href="/abonnements">{% trans %}Abonnements{% endtrans %}</a>
										</li>
									</ul>
								</li>
								<li>
									<a href="/commandes">{% trans %}Commandes{% endtrans %}</a>
								</li>
								<li>
									<a href="/reparations">{% trans %}RÃ©clamations{% endtrans %}</a>
								</li>
								<li>
									<a href="/contacts/all">{% trans %}Contacts{% endtrans %}</a>
								</li>

							</ul>
						</div>
					</div>

				</div>
			</div>
		</section>

		<!-- Navbar & Hero End -->
	{% endblock %}
	<body>
		<div class="content-wrapper">
			<div class="container"> {% block body %}{% endblock %}
				</div>
			</div>

			{% block footer %}
				<!-- Footer Start -->
				<section class="footer-section">
					<div class="container">
						<div class="row">
							<div class="col-md-12">
								&copy; 2023 SanarLav |<a href="" target="_blank">
									Designed by : Samath & Michel_Mkdir</a>
							</div>

						</div>
					</div>
				</section>
				<!-- Footer End -->
			{% endblock %}

			{% block scripts %}
				<!-- Template Javascript -->
				<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
				<script src="{{ asset('assets/admin/js/bootstrap.js') }}"></script>
    			<script src="{{ asset('assets/admin/js/dataTables/jquery.dataTables.js') }}"></script>
    			<script src="{{ asset('assets/admin/js/dataTables/dataTables.bootstrap.js') }}"></script>
				<script src="{{ asset('assets/admin/js/custom.js') }}"></script>
			{% endblock %}
		</body>
	</html>
