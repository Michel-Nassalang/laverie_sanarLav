{% extends 'admin/base_admin.html.twig' %}

{% block title %}{% trans %}Compte Administrateur{% endtrans %}
{% endblock %}

{% block body %}
	<div class="row pad-botm">
		<div class="col-md-12">
			<h4 class="header-line">{% trans %}Tableau de Bord{% endtrans %}</h4>

		</div>

	</div>

	<div class="row">

		<div class="col-md-3 col-sm-3 col-xs-6">
			<div class="alert alert-info back-widget-set text-center">
				<i class="fa fa-user fa-5x"></i>
				<h3>{{lusers}}
				</h3>
				{% trans %}Nombre d'utilisateurs{% endtrans %}
			</div>
		</div>
		<div class="col-md-3 col-sm-3 col-xs-6">
			<div class="alert alert-success back-widget-set text-center">
				<i class="fa fa-shopping-cart fa-5x"></i>
				<h3>{{lcommandes}}</h3>
				{% trans %}Nombre de commandes{% endtrans %}
			</div>
		</div>
		<div class="col-md-3 col-sm-3 col-xs-6">
			<div class="alert alert-warning back-widget-set text-center">
				<i class="fa fa-credit-card fa-5x"></i>
				<h3>{{ltrans}}</h3>
				{% trans %}Nombre de transactions{% endtrans %}
			</div>
		</div>
		<div class="col-md-3 col-sm-3 col-xs-6">
			<div class="alert alert-danger back-widget-set text-center">
				<i class="fa fa-gavel fa-5x"></i>
				<h3>{{lreparations}}
				</h3>
				{% trans %}Nombre de réclammations{% endtrans %}
			</div>
		</div>

	</div>

	<div class="row">
		<div class="col-md-8 col-sm-8 col-xs-12">
			<div id="carousel-example" class="carousel slide slide-bdr" data-ride="carousel">

				<div class="carousel-inner">
					<div class="item active">

						<img src="{{ asset('assets/img/h_laverie.jpg') }}" alt=""/>

					</div>
					<div class="item">
						<img src="{{ asset('assets/img/lav.jpg') }}" alt=""/>

					</div>
					<div class="item">
						<img src="{{ asset('assets/img/lave.jpg') }}" alt=""/>

					</div>
				</div>
				<!--INDICATORS-->
				<ol class="carousel-indicators">
					<li data-target="#carousel-example" data-slide-to="0" class="active"></li>
					<li data-target="#carousel-example" data-slide-to="1"></li>
					<li data-target="#carousel-example" data-slide-to="2"></li>
				</ol>
				<!--PREVIUS-NEXT BUTTONS-->
				<a class="left carousel-control" href="#carousel-example" data-slide="prev">
					<span class="glyphicon glyphicon-chevron-left"></span>
				</a>
				<a class="right carousel-control" href="#carousel-example" data-slide="next">
					<span class="glyphicon glyphicon-chevron-right"></span>
				</a>
			</div>
		</div>

		<div class="col-md-4 col-sm-4 col-xs-12">
			<div class="panel panel-primary ">
				<div class="panel-heading">
					{% trans %}Messages récents{% endtrans %}
				</div>
				<div class="panel-body chat-widget-main">
					{% for contact in contactslimit %}
						{% if loop.index % 2 == 0 %}
							<div class="chat-widget-left">
								{{contact.sujet}} : 
								{{ contact.texte}}
							</div>
							<div class="chat-widget-name-left">
								<h4>{{contact.nom}}</h4>
								<h5>{{ contact.datecreate | date('d-m-Y H:i:s') }}
								</h5>
							</div>
							<hr/>
						{% else %}
							<div class="chat-widget-right">
								{{contact.sujet}} :
								{{ contact.texte}}
							</div>
							<div class="chat-widget-name-right">
								<h4>{{contact.nom}}</h4>
								<h5>{{ contact.datecreate | date('d-m-Y H:i:s') }}
								</h5>
							</div>
							<hr/>
						{% endif %}
					{% endfor %}
				</div>
			</div>
		</div>
	</div>
	<hr/>
	<div class="row">
		<div class="col-md-4 col-sm-4 col-xs-12">
			<div class="alert alert-info text-center">
				<h3>
					{% trans %}Avis important{% endtrans %}</h3>
				<hr/>
				<i class="fa fa-warning fa-4x"></i>
				<p>
					Lorem ipsum dolor sit amet, consectetur adipiscing elit gthn.
																				Lorem ipsum dolor sit amet, consectetur adipiscing elit gthn.
																				Lorem ipsum dolor sit amet, consectetur adipiscing elit gthn.
																				Lorem ipsum dolor sit amet.
				</p>
				<hr/>
				<a href="" class="btn btn-info">Voir plus de détails{% endtrans %}</a>
			</div>
		</div>
		<div class="col-md-8 col-sm-8 col-xs-12">
			<div class="panel panel-success">
				<div class="panel-heading">
					{% trans %}Liste des derniers clients inscrits{% endtrans %}
				</div>
				<div class="panel-body">
					<div class="table-responsive">
						<table class="table table-striped table-bordered table-hover">
							<thead>
								<tr>
									<th>#</th>
									<th>{% trans %}Prenom{% endtrans %}</th>
									<th>{% trans %}Nom{% endtrans %}</th>
									<th>{% trans %}Email{% endtrans %}</th>
									<th>{% trans %}Adresse{% endtrans %}</th>
								</tr>
							</thead>
							<tbody>
								{% for user in userslimit %}
									<tr>
										<td>{{user.id}}</td>
										<td>{{user.prenom}}</td>
										<td>{{user.nom}}</td>
										<td>{{user.email}}</td>
										<td>{{user.adresse}}</td>
									</tr>
								{% endfor %}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-6 col-sm-6">
			<div class="panel panel-default">
				<div class="panel-heading">
					{% trans %}Notes{% endtrans %}
				</div>
				<div class="panel-body">
					<ul class="nav nav-tabs">
						<li class="active">
							<a href="#client" data-toggle="tab">{% trans %}Pour clients{% endtrans %}</a>
						</li>
						<li class="">
							<a href="#employer" data-toggle="tab">{% trans %}Pour employés{% endtrans %}</a>
						</li>
						<li class="">
							<a href="#brouillon" data-toggle="tab">{% trans %}Brouillon{% endtrans %}</a>
						</li>
						<li class="">
							<a href="#settings" data-toggle="tab">{% trans %}Paramètres{% endtrans %}</a>
						</li>
					</ul>

					<div class="tab-content">
