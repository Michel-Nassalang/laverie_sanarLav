{% extends 'admin/base_admin.html.twig' %}

{% block title %}{% trans %}Compte Administrateur{% endtrans %}
{% endblock %}

{% block body %}
	<div class="row pad-botm">
		<div class="col-md-12">
			<h4 class="header-line">{% trans %}Abonnements de SanarLav{% endtrans %}</h4>
		</div>
	</div>

	<div class="row">
		<div
			class="col-md-12">
			<!-- Advanced Tables -->
			<div class="panel panel-default">
				<div class="panel-heading">
					{% trans %}Listes des abonnements{% endtrans %}
				</div>
				<div class="panel-body">
					<div class="table-responsive">
						<table class="table table-striped table-bordered table-hover" id="dataTables-example">
							<thead>
								<tr>
									<th>#</th>
									<th>{% trans %}Date de debut{% endtrans %}</th>
									<th>{% trans %}Date de fin{% endtrans %}</th>
									<th>{% trans %}Client{% endtrans %}</th>
									<th>{% trans %}Type{% endtrans %}</th>
									<th>{% trans %}Statut{% endtrans %}</th>
									<th>{% trans %}Prix{% endtrans %}</th>
									<th>{% trans %}Date de crÃ©ation{% endtrans %}</th>
									<th>{% trans %}actions{% endtrans %}</th>
								</tr>
							</thead>
							<tbody>
								{% for abonnement in abonnements %}
									<tr>
										<td>{{ abonnement.id }}</td>
										<td>{{ abonnement.datedebut ? abonnement.datedebut|date('Y-m-d') : '' }}</td>
										<td>{{ abonnement.datefin ? abonnement.datefin|date('Y-m-d') : '' }}</td>
                                        <td>{{ abonnement.clientid }}</td>
										<td>{{ abonnement.type }}</td>
										<td>{{ abonnement.statut }}</td>
										<td>{{ abonnement.prix }}</td>
										<td>{{ abonnement.datecreate ? abonnement.datecreate|date('Y-m-d H:i:s') : '' }}</td>
										<td>
											<a href="{{ path('app_abonnements_show', {'id': abonnement.id}) }}">{% trans %}Voir{% endtrans %}</a>
											<a href="{{ path('app_abonnements_edit', {'id': abonnement.id}) }}">{% trans %}Editer{% endtrans %}</a>
										</td>
									</tr>
								{% else %}
									<tr>
										<td colspan="12">{% trans %}Pas d'abonnements prÃ©sents deans la base{% endtrans %}</td>
									</tr>
								{% endfor %}
							</tbody>
						</table>
					</div>

				</div>
			</div>
			<!--End Advanced Tables -->
		</div>
	</div>

{% endblock %}
