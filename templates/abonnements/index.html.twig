{% extends 'admin/base_admin.html.twig' %}

{% block title %}Compte Administrateur
{% endblock %}

{% block body %}
	<div class="row pad-botm">
		<div class="col-md-12">
			<h4 class="header-line">Abonnements de SanarLav</h4>
		</div>
	</div>

	<div class="row">
		<div
			class="col-md-12">
			<!-- Advanced Tables -->
			<div class="panel panel-default">
				<div class="panel-heading">
					Listes des abonnements
				</div>
				<div class="panel-body">
					<div class="table-responsive">
						<table class="table table-striped table-bordered table-hover" id="dataTables-example">
							<thead>
								<tr>
									<th>#</th>
									<th>Datedebut</th>
									<th>Datefin</th>
									<th>Client</th>
									<th>Type</th>
									<th>Statut</th>
									<th>Prix</th>
									<th>Date de création</th>
									<th>actions</th>
								</tr>
							</thead>
							<tbody>
								{% for abonnement in abonnements %}
									<tr>
										<td>{{ abonnement.id }}</td>
										<td>{{ abonnement.datedebut ? abonnement.datedebut|date('Y-m-d') : '' }}</td>
										<td>{{ abonnement.datefin ? abonnement.datefin|date('Y-m-d') : '' }}</td>
                                        <td>{{ abonnement.clientid }}</td>
										<td>{{ abonnement.type }}</td>
										<td>{{ abonnement.statut }}</td>
										<td>{{ abonnement.prix }}</td>
										<td>{{ abonnement.datecreate ? abonnement.datecreate|date('Y-m-d H:i:s') : '' }}</td>
										<td>
											<a href="{{ path('app_abonnements_show', {'id': abonnement.id}) }}">Voir</a>
											<a href="{{ path('app_abonnements_edit', {'id': abonnement.id}) }}">Editer</a>
										</td>
									</tr>
								{% else %}
									<tr>
										<td colspan="12">Pas d'abonnements présents deans la base</td>
									</tr>
								{% endfor %}
							</tbody>
						</table>
					</div>

				</div>
			</div>
			<!--End Advanced Tables -->
		</div>
	</div>

{% endblock %}
