<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}SanarLav
			{% endblock %}
		</title>
		<link
		rel="icon" href="{{ asset('assets/img/icones/ilav_r.ico') }}">
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		{% block styles %}
			<link rel="preconnect" href="https://fonts.googleapis.com">
			<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
			<link
			href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600&family=Nunito:wght@600;700;800&family=Pacifico&display=swap" rel="stylesheet">

			<!-- Icon Font Stylesheet -->
			<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
			<link
			href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

			<!-- Libraries Stylesheet -->
			<link href="{{ asset('assets/lib/animate/animate.min.css') }}" rel="stylesheet">
			<link href="{{ asset('assets/lib/owlcarousel/assets/owl.carousel.min.css') }}" rel="stylesheet">
			<link
			href="{{ asset('assets/lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css') }}" rel="stylesheet"/>

			<!-- Customized Bootstrap Stylesheet -->
			<link
			href="{{ asset('assets/css/bootstrap.min.css') }}" rel="stylesheet">

			<!-- Template Stylesheet -->
			<link href="{{ asset('assets/css/style.css') }}" rel="stylesheet">
		{% endblock %}

		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>
	{% block nav %}
		<!-- Navbar & Hero Start -->
		<div class="container-xxl position-relative p-0">
			<nav class="navbar navbar-expand-lg navbar-dark bg-dark px-4 px-lg-5 py-3 py-lg-0">
				<a href="" class="navbar-brand p-0">
					<h1 class="text-primary m-0"><img src="{{ asset('assets/img/logo.png') }}" alt="Logo">
						SanarLav</h1>

				</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
					<span class="fa fa-bars"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarCollapse">
					<div class="navbar-nav ms-auto py-0 pe-4">
						<a href="/" class="nav-item nav-link active">{% trans %}Acceuil{% endtrans %}</a>
						<a href="/service" class="nav-item nav-link">{% trans %}Services{% endtrans %}</a>
						<a href="/commande" class="nav-item nav-link">{% trans %}Commandes{% endtrans %}</a>
						<div class="nav-item dropdown">
							<a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">{% trans %}Informations{% endtrans %}</a>
							<div class="dropdown-menu m-0">
								<a href="/about" class="dropdown-item">{% trans %}A propos{% endtrans %}</a>
								<a href="/blog" class="dropdown-item">{% trans %}Blog{% endtrans %}</a>
								<a href="/faq" class="dropdown-item">{% trans %}FAQ{% endtrans %}</a>
							</div>
						</div>
						<a href="/contact" class="nav-item nav-link">{% trans %}Contact{% endtrans %}</a>
					</div>
					{% if is_granted('ROLE_ADMIN') %}
					<a href="/admin" class="btn btn-primary py-2 px-4">{% trans %}Mon compte{% endtrans %}</a>
					{% elseif is_granted('ROLE_EMPLOYER') %}
					<a href="/employer" class="btn btn-primary py-2 px-4">{% trans %}Mon compte{% endtrans %}</a>
					{% else %}
					<a href="/compte" class="btn btn-primary py-2 px-4">{% trans %}Mon compte{% endtrans %}</a>
					{% endif %}
				</div>
			</nav>

		</div>
		<!-- Navbar & Hero End -->
	{% endblock %}
	<body>
		{% block body %}{% endblock %}

		{% block footer %}
			<!-- Footer Start -->
			<div class="container-fluid bg-dark text-light footer pt-5 mt-5 wow fadeIn" data-wow-delay="0.1s">
				<div class="container py-5">
					<div class="row g-5">
						<div class="col-lg-3 col-md-6">
							<h4 class="section-title ff-secondary text-start text-primary fw-normal mb-4">{% trans %}Compagnie{% endtrans %}</h4>
							<a class="btn btn-link" href="">{% trans %}A propos de Nous{% endtrans %}</a>
							<a class="btn btn-link" href="">{% trans %}Contactez Nous{% endtrans %}</a>
							<a class="btn btn-link" href="">{% trans %}Reservation{% endtrans %}</a>
							<a class="btn btn-link" href="">{% trans %}Politique de confidentialité{% endtrans %}</a>
							<a class="btn btn-link" href="">{% trans %}Termes & Conditions{% endtrans %}</a>
						</div>
						<div class="col-lg-3 col-md-6">
							<h4 class="section-title ff-secondary text-start text-primary fw-normal mb-4">{% trans %}Contact{% endtrans %}</h4>
							<p class="mb-2">
								<i class="fa fa-map-marker-alt me-3"></i>Sanar, Saint-Louis</p>
							<p class="mb-2">
								<i class="fa fa-phone-alt me-3"></i>+221771112236</p>
							<p class="mb-2">
								<i class="fa fa-envelope me-3"></i>info.sanarlav@gmail.com</p>
							<div class="d-flex pt-2">
								<a class="btn btn-outline-light btn-social" href="">
									<i class="fab fa-twitter"></i>
								</a>
								<a class="btn btn-outline-light btn-social" href="">
									<i class="fab fa-facebook-f"></i>
								</a>
								<a class="btn btn-outline-light btn-social" href="">
									<i class="fab fa-youtube"></i>
								</a>
								<a class="btn btn-outline-light btn-social" href="">
									<i class="fab fa-linkedin-in"></i>
								</a>
							</div>
						</div>
						<div class="col-lg-3 col-md-6">
							<h4 class="section-title ff-secondary text-start text-primary fw-normal mb-4">{% trans %}Ouverture{% endtrans %}</h4>
							<h5 class="text-light fw-normal">{% trans %}Lundi - Samedi{% endtrans %}</h5>
							<p>{% trans %}10H - 22H{% endtrans %}</p>
							<h5 class="text-light fw-normal">{% trans %}Dimanche{% endtrans %}</h5>
							<p>{% trans %}12H - 20H{% endtrans %}</p>
						</div>
						<div class="col-lg-3 col-md-6">
							<h4 class="section-title ff-secondary text-start text-primary fw-normal mb-4">{% trans %}Newsletter{% endtrans %}</h4>
							<p>{% trans %}Connectez vous à nos newsletters pour voir nos informations et nos éventuelles opportinités.{% endtrans %}</p>
							<div class="position-relative mx-auto" style="max-width: 400px;">
								<input class="form-control border-primary w-100 py-3 ps-4 pe-5" type="text" placeholder="Votre email">
								<button type="button" class="btn btn-primary py-2 position-absolute top-0 end-0 mt-2 me-2">{% trans %}S'inscrire{% endtrans %}</button>
							</div>
						</div>
					</div>
				</div>
				<div class="container">
					<div class="copyright">
						<div class="row">
							<div class="col-md-6 text-center text-md-start mb-3 mb-md-0">
								&copy;
								<a class="border-bottom" href="/">SanarLav</a>, All Right Reserved.
									
									                               Designed By
								<a class="border-bottom" href="https://michel-nassalang.netlify.app/">Michel and Abdou Samath</a>
							</div>
							<div class="col-md-6 text-center text-md-end">
								<div class="footer-menu">
									<a href="">{% trans %}Home{% endtrans %}</a>
									<a href="">{% trans %}Cookies{% endtrans %}</a>
									<a href="">{% trans %}Help{% endtrans %}</a>
									<a href="">{% trans %}FQAs{% endtrans %}</a>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
			<!-- Footer End -->


			<!-- Back to Top -->
			<a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top">
				<i class="bi bi-arrow-up"></i>
			</a>

		{% endblock %}

		{% block scripts %}
			<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
			<script src="{{ asset('assets/lib/wow/wow.min.js') }}"></script>
			<script src="{{ asset('assets/lib/easing/easing.min.js') }}"></script>
			<script src="{{ asset('assets/lib/waypoints/waypoints.min.js') }}"></script>
			<script src="{{ asset('assets/lib/counterup/counterup.min.js') }}"></script>
			<script src="{{ asset('assets/lib/owlcarousel/owl.carousel.min.js') }}"></script>
			<script src="{{ asset('assets/lib/tempusdominus/js/moment.min.js') }}"></script>
			<script src="{{ asset('assets/lib/tempusdominus/js/moment-timezone.min.js') }}"></script>
			<script src="{{ asset('assets/lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js') }}"></script>

			<!-- Template Javascript -->
			<script src="{{ asset('assets/js/main.js') }}"></script>
		{% endblock %}
	</body>
</html>
