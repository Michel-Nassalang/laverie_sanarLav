{% extends 'admin/base_admin.html.twig' %}

{% block title %}Compte Administrateur
{% endblock %}

{% block body %}
	<div class="row pad-botm">
		<div class="col-md-12">
			<h4 class="header-line">Réclamations de SanarLav</h4>
		</div>
	</div>

	<div class="row">
		<div
			class="col-md-12">
			<!-- Advanced Tables -->
			<div class="panel panel-default">
				<div class="panel-heading">
					Listes des réclammations
				</div>
				<div class="panel-body">
					<div class="table-responsive">
						<table class="table table-striped table-bordered table-hover" id="dataTables-example">
							<thead>
								<tr>
									<th>#</th>
									<th>Description</th>
									<th>Commande</th>
									<th>Client</th>
									<th>Statut</th>
									<th>Prix</th>
									<th>Date</th>
									<th>Date de mise à jour</th>
									<th>actions</th>
								</tr>
							</thead>
							<tbody>
								{% for reparation in reparations %}
									<tr>
										<td>{{ reparation.id }}</td>
										<td>{{ reparation.description }}</td>
										<td>{{ reparation.commandeid}}</td>
										<td>{{ reparation.userid }}</td>
										<td>{{ reparation.statut }}</td>
										<td>{{ reparation.prix }}</td>
										<td>{{ reparation.date ? reparation.date|date('Y-m-d H:i:s') : '' }}</td>
										<td>{{ reparation.dateUpdate ? reparation.dateUpdate|date('Y-m-d H:i:s') : '' }}</td>
										<td>
											<a href="{{ path('app_reparations_show', {'id': reparation.id}) }}">Voir</a>
											<a href="{{ path('app_reparations_edit', {'id': reparation.id}) }}">Editer</a>
										</td>
									</tr>
								{% else %}
									<tr>
										<td colspan="12">Pas de réclammations présents deans la base</td>
									</tr>
								{% endfor %}
							</tbody>
						</table>
					</div>

				</div>
			</div>
			<!--End Advanced Tables -->
		</div>
	</div>

{% endblock %}
