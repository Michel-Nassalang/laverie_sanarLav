{% extends 'admin/base_admin.html.twig' %}

{% block title %}{% trans %}Compte Administrateur{% endtrans %}
{% endblock %}

{% block body %}
	<div class="row pad-botm">
		<div class="col-md-12">
			<h4 class="header-line">{% trans %}Utilisateurs de SanarLav{% endtrans %}</h4>
		</div>
	</div>

	<div class="row">
		<div
			class="col-md-12">
			<!-- Advanced Tables -->
			<div class="panel panel-default">
				<div class="panel-heading">
					{% trans %}Listes des transactions{% endtrans %}
				</div>
				<div class="panel-body">
					<div class="table-responsive">
						<table class="table table-striped table-bordered table-hover" id="dataTables-example">
							<thead>
								<tr>
									<th>#</th>
									<th>{% trans %}Mode de paiement{% endtrans %}</th>
									<th>{% trans %}Montant{% endtrans %}</th>
									<th>{% trans %}Client{% endtrans %}</th>
									<th>{% trans %}commande{% endtrans %}</th>
									<th>{% trans %}Date{% endtrans %}</th>
									<th>{% trans %}actions{% endtrans %}</th>
								</tr>
							</thead>
							<tbody>
								{% for transaction in transactions %}
									<tr>
										<td>{{ transaction.id }}</td>
										<td>{{ transaction.modepaiement }}</td>
										<td>{{ transaction.montant }}</td>
										<td>{{ transaction.clientid }}</td>
										<td>{{ transaction.commandeid }}</td>
										<td class="center">{{ transaction.date ? transaction.date|date('Y-m-d') : '' }}</td>
										<td class="center">
											<a href="{{ path('app_transaction_show', {'id': transaction.id}) }}">{% trans %}Voir{% endtrans %}</a>
											<a href="{{ path('app_transaction_edit', {'id': transaction.id}) }}">{% trans %}Editer{% endtrans %}</a>
										</td>
									</tr>
								{% else %}
									<tr>
										<td colspan="12">{% trans %}Pas d'utilisateurs prÃ©sents deans la base{% endtrans %}</td>
									</tr>
								{% endfor %}
							</tbody>
						</table>
					</div>

				</div>
			</div>
			<!--End Advanced Tables -->
		</div>
	</div>

{% endblock %}
