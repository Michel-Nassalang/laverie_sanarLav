{% extends 'admin/base_admin.html.twig' %}

{% block title %}Compte Administrateur
{% endblock %}

{% block body %}
	<div class="row pad-botm">
		<div class="col-md-12">
			<h4 class="header-line">Utilisateurs de SanarLav</h4>
		</div>
	</div>

	<div class="row">
		<div
			class="col-md-12">
			<!-- Advanced Tables -->
			<div class="panel panel-default">
				<div class="panel-heading">
					Listes des transactions
				</div>
				<div class="panel-body">
					<div class="table-responsive">
						<table class="table table-striped table-bordered table-hover" id="dataTables-example">
							<thead>
								<tr>
									<th>#</th>
									<th>Modepaiement</th>
									<th>Montant</th>
									<th>Client</th>
									<th>commande</th>
									<th>Date</th>
									<th>actions</th>
								</tr>
							</thead>
							<tbody>
								{% for transaction in transactions %}
									<tr>
										<td>{{ transaction.id }}</td>
										<td>{{ transaction.modepaiement }}</td>
										<td>{{ transaction.montant }}</td>
										<td>{{ transaction.clientid }}</td>
										<td>{{ transaction.commandeid }}</td>
										<td class="center">{{ transaction.date ? transaction.date|date('Y-m-d') : '' }}</td>
										<td class="center">
											<a href="{{ path('app_transaction_show', {'id': transaction.id}) }}">Voir</a>
											<a href="{{ path('app_transaction_edit', {'id': transaction.id}) }}">Editer</a>
										</td>
									</tr>
								{% else %}
									<tr>
										<td colspan="12">Pas d'utilisateurs pr√©sents deans la base</td>
									</tr>
								{% endfor %}
							</tbody>
						</table>
					</div>

				</div>
			</div>
			<!--End Advanced Tables -->
		</div>
	</div>

{% endblock %}
