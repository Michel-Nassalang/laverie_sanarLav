{% extends 'admin/base_admin.html.twig' %}

{% block title %}{% trans %}Compte Administrateur{% endtrans %}
{% endblock %}

{% block body %}
	<div class="row pad-botm">
		<div class="col-md-12">
			<h4 class="header-line">{% trans %}Utilisateurs de{% endtrans %} SanarLav</h4>
		</div>
	</div>

	<div class="row">
		<div
			class="col-md-12">
			<!-- Advanced Tables -->
			<div class="panel panel-default">
				<div class="panel-heading">
					{% trans %}Listes des utilisateurs{% endtrans %}
				</div>
				<div class="panel-body">
					<div class="table-responsive">
						<table class="table table-striped table-bordered table-hover" id="dataTables-example">
							<thead>
								<tr>
									<th>{% trans %}Prenom{% endtrans %}</th>
									<th>{% trans %}Nom{% endtrans %}</th>
									<th>{% trans %}Email{% endtrans %}</th>
									<th>{% trans %}Telephone{% endtrans %}</th>
									<th>{% trans %}Adresse{% endtrans %}</th>
									<th>{% trans %}Date de CrÃ©ation{% endtrans %}</th>
								</tr>
							</thead>
							<tbody>
								{% for user in users %}
									<tr class="gradeA">
										<td>{{user.prenom}}</td>
										<td>{{user.nom}}</td>
										<td>{{user.email}}</td>
										<td class="center">{{user.tel}}</td>
										<td class="center">{{user.adresse}}</td>
										<td class="center">{{user.datecreate |date('d/m/Y H:i:s')}}</td>
									</tr>
								{% else %}
									<tr>
										<td colspan="12">{% trans %}Pas d'utilisateurs prÃ©sents deans la base{% endtrans %}</td>
									</tr>
								{% endfor %}
							</tbody>
						</table>
					</div>

				</div>
			</div>
			<!--End Advanced Tables -->
		</div>
	</div>
{% endblock %}
